{% extends 'base.html.twig' %}

{% block title %}
    {% trans %}Account member bookings{% endtrans %}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="page-header mt-3">
            <div>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_account') }}">{% trans %}Account{% endtrans %}</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{% trans %}Account member bookings{% endtrans %}</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card mt-3">
                    <div class="card-header d-flex justify-content-between">
                        <h2 class="card-title">{% trans %}Account member bookings{% endtrans %}</h2>
                    </div>
                    <div class="card-body">
                        <div id="calendar-holder" data-filter-member="{{ app.user.id }}" data-events-url="{{ path('fc_load_events') }}"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('calendar') }}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('calendar') }}
{% endblock %}